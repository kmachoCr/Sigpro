{% extends "VinvSigproBundle::layout.html.twig" %}

{% block title %} Nombre {% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>Proyectos</h1>
                {% if page <= 5 %}
                    {% set min = 1 %}
                {% else %}
                    {% set min = (page - 4)%}

                {% endif %}

                {% if count <= (page + 4) %}
                    {% set max = count%}
                {% else %}
                    {% set max = (page + 4)%}
                {% endif %}
                <nav >
                    <ul class="pagination pull-center">
                        <li>
                            <a href="{{ path("projects", {"page": page - 1})}}" aria-label="Previous"{% if page == 1 %}class="disabled"{% endif%}>
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        {% for i in min..max %}

                            <li {% if i == page%}class="active"{% endif%}><a href="{{ path("projects", {"page": i})}} ">{{i}}</a></li>
                            {% endfor %}
                        <li>
                            <a href="{{ path("projects", {"page": page + 1})}}" aria-label="Next" {% if count == max%}class="disabled"{% endif%}>
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 55%;">{{ "Descripci√≥n" |upper }}</th>
                            <th class="text-center">{{ "Investigadores" |upper }}</th>
                            <th class="text-center">{{ "Estado" |upper }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for project in projects %}
                            <tr>

                                <td>
                                    <p>{{ project["codigo"]  }}</p>
                                    <a href="{{ path("project_show", {"id": project["codigo"]|trim}) }}">{{ project["nombre"] }}</a></td>
                                    {% set foo = loop.index0 %}
                                <td class="">
                                    {% for researcher in researchers[foo] %}
                                        <a href="{{ path("researcher_show", {"id": researcher["cedula"]|trim}) }}">{{ (researcher["nombre"] ~ researcher["apellido1"] ~ researcher["apellido2"])|lower|title}}</a><br>
                                    {% endfor %}
                                </td>
                                <td class="text-center">{{ project["estado"]  }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <nav >
                    <ul class="pagination pull-center">
                        <li>
                            <a href="#" aria-label="Previous"{% if 1 == page%}class="disabled"{% endif%}>
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        {% for i in min..max %}

                            <li {% if i == page%}class="active"{% endif%}><a href="{{ path("projects", {"page": i})}} ">{{i}}</a></li>
                            {% endfor %}
                        <li>
                            <a href="#" aria-label="Next" {% if count == max%}class="disabled"{% endif%}>
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>


    </div>

{% endblock %}


