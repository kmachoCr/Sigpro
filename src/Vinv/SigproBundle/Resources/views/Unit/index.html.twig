{% extends "VinvSigproBundle::layout.html.twig" %}

{% block title %} Nombre {% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>Unidades de Investigación</h1>
                {% if page <= 5 %}
                    {% set min = 1 %}
                {% else %}
                    {% set min = (page - 4)%}

                {% endif %}
                
                {% if count <= (page + 4)%}
                    {% set max = count%}
                {% else %}
                    {% set max = (page + 4)%}
                {% endif %}
                <nav >
                    <ul class="pagination pull-center">
                        <li>
                            <a href="{{ path("units", {"page": page - 1})}}" aria-label="Previous"{% if page == 1 %}class="disabled"{% endif%}>
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        {% for i in min..max %}

                            <li {% if i == page%}class="active"{% endif%}><a href="{{ path("units", {"page": i})}} ">{{i}}</a></li>
                            {% endfor %}
                        <li>
                                <a href="{{ path("units", {"page": page + 1})}}" aria-label="Next" {% if count == max%}class="disabled"{% endif%}>
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>{{ "unidad" |upper }}</th>
                            <th class="text-center">{{ "Área" |upper }}</th>
                            <th class="text-center">{{ "Director" |upper }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for unit in units %}
                            <tr>
                                <td><a href="{{ path("unit_show", {"id": unit["unidad_c"]|trim}) }}">{{ unit["unidad"] }}</a></td>
                                <td class="text-center">{{ unit["area"]  }}</td>
                                <td class="text-center">{{ unit["director"]  }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <nav >
                    <ul class="pagination pull-center">
                        <li>
                            <a href="{{ path("units", {"page": page - 1})}}" aria-label="Previous"{% if page == 1 %}class="disabled"{% endif%}>
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        {% for i in min..max %}

                            <li {% if i == page%}class="active"{% endif%}><a href="{{ path("units", {"page": i})}} ">{{i}}</a></li>
                            {% endfor %}
                        <li>
                            <a href="{{ path("units", {"page": page + 1})}}" aria-label="Next" {% if count == max%}class="disabled"{% endif%}>
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>


    </div>

{% endblock %}


